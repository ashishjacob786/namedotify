model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique // Permalink (e.g., /blog/my-post)
  content     String   @db.Text // Full HTML content from the WP-style editor
  excerpt     String?  // Short description for SEO and Blog Card
  category    String   @default("General")
  tags        String   // Storing tags as comma-separated string
  author      String   @default("NameDotify Admin")
  status      String   @default("published") // 'draft' or 'published'
  featuredImg String?  // URL of the cover image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}